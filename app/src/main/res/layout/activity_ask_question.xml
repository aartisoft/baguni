<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:text="@string/ASK"
        android:textSize="18dp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/btnBack"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@drawable/bg_white_10_stroke_grey"
        android:layout_margin="20dp"
        android:elevation="3dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/btnSend"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:padding="10dp"
            android:text="@string/QUESTION"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editText"
            android:layout_weight="1"
            android:gravity="left|top"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:hint="@string/ASK_YOUR_QUESTION"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSend"
        android:text="@string/SEND"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:background="@drawable/bg_purple_30"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/saveResult"
        android:visibility="gone"
        android:background="#65000000"
        android:elevation="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="40dp"
            android:padding="30dp"
            android:background="@drawable/bg_white_10_stroke_grey"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/popup_podo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/MSG_SEND"
                android:textSize="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/avenir_bold"
                android:layout_marginTop="50dp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>