<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lesson.LessonHangulAssembly">

    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="10dp"
            android:text="intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:layout_margin="10dp"
            android:text="repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            
            android:gravity="center"
            android:id="@+id/c"
            android:text="C"
            android:textSize="80dp"
            android:background="@drawable/border"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:gravity="center"
            android:id="@+id/v"
            android:text="V"
            android:textSize="80dp"
            android:background="@drawable/border"
            android:layout_width="0dp"
            android:layout_height="0dp" />

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnConsonant"
            android:layout_weight="1"
            android:text="consonant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnVowel"
            android:layout_weight="1"
            android:text="vowel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnBatchim"
            android:layout_weight="1"
            android:text="batchim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hangulBox"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/consonantBox"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="ã„±"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vowelBox"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>



    </LinearLayout>

</LinearLayout>