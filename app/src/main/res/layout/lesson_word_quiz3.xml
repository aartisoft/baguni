<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FOGGY"
    android:padding="15dp"
    tools:context=".lesson.LessonWord">


    <TextView
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/LISTEN_AND_ANSWER"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/btnAudio"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:src="@drawable/audio_big_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/answer"
        app:layout_constraintTop_toBottomOf="@id/btnAudio"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/answerLayout"
        android:background="@drawable/bg_white_10"
        android:elevation="1dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/answer"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:textColor="@color/BLACK"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/btnReset"
            android:visibility="gone"
            android:layout_margin="25dp"
            android:src="@drawable/close_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxLayout"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:layout_constraintTop_toBottomOf="@id/answerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </com.google.android.flexbox.FlexboxLayout>



</androidx.constraintlayout.widget.ConstraintLayout>