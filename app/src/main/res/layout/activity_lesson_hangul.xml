<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EBEBEB"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:text="@string/CONSONANT"
        android:textSize="18dp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/btnBack"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnIntro"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="right"
        android:text="@string/INTRO"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:background="@drawable/bg_purple_30"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/layoutHangul"
        android:elevation="1dp"
        android:paddingTop="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnIntro"
        app:layout_constraintBottom_toTopOf="@id/btnAudio"
        android:background="@drawable/bg_white_25_stroke_grey"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/textViewHangul"
            android:text="ㄱ"
            android:textSize="70dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewHangulExplain"
            android:text="기역"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/btnAudio"
        app:layout_constraintBottom_toTopOf="@+id/btns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:src="@drawable/audio_big_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/btns"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        android:elevation="2dp"
        android:background="@drawable/bg_white_25_stroke_grey"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/btnWriting"
                android:gravity="center_vertical|right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/writing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="@string/WRITING"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <View
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="#C4C4C4"
                android:layout_width="1dp"
                android:layout_height="30dp"/>

            <LinearLayout
                android:id="@+id/btnHint"
                android:gravity="center_vertical|left"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="@string/HINT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/btnIntro"
        app:layout_constraintBottom_toTopOf="@id/btnAudio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layoutHangul"
        android:background="@drawable/bg_white_25_right_stroke_grey"
        android:elevation="1dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <View
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/btnIntro"
        app:layout_constraintBottom_toTopOf="@id/btnAudio"
        app:layout_constraintStart_toEndOf="@id/layoutHangul"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_white_25_left_stroke_grey"
        android:elevation="1dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/imageViewHangul"
        android:elevation="1dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/layoutHangul"
        app:layout_constraintBottom_toBottomOf="@id/layoutHangul"
        app:layout_constraintStart_toStartOf="@id/layoutHangul"
        app:layout_constraintEnd_toEndOf="@id/layoutHangul"
        android:background="@drawable/bg_white_25_stroke_grey"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutIntro"
        android:visibility="gone"
        android:background="#65000000"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnClose"
            app:layout_constraintBottom_toTopOf="@+id/layout"
            app:layout_constraintStart_toStartOf="@+id/layout"
            android:src="@drawable/close_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="25dp"
            android:orientation="vertical"
            android:background="@drawable/bg_white_32_top"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/INTRO"
                android:textSize="25dp"
                android:textColor="#6A69EF"
                android:fontFamily="@font/avenir_bold"
                />

            <TextView
                android:id="@+id/textViewIntro"
                android:textColor="#7E8494"
                android:textSize="18dp"
                android:fontFamily="@font/avenir_light"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>