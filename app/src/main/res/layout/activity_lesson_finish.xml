<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FOGGY"
    tools:context=".lesson.LessonFinish">

    <ImageView
        android:src="@drawable/confetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/complete"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/finisedlesson_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/selectBox"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/complete"
        android:orientation="vertical"
        android:elevation="1dp"
        android:background="@drawable/bg_white_10"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/SELECT_BOX"
            android:textSize="20dp"
            android:textColor="@color/BLACK"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/box1"
                android:src="@drawable/treasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/box2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/treasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/box3"
                android:src="@drawable/treasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/selectResult"
        android:visibility="gone"
        android:elevation="1dp"
        android:background="@drawable/bg_white_10"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/complete"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/textView"
            android:text="@string/CONGRATULATION"
            android:textSize="25dp"
            android:textColor="@color/YELLOW"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/selectResult"
            app:layout_constraintStart_toStartOf="@+id/selectResult"
            app:layout_constraintEnd_toEndOf="@+id/selectResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@id/textView"
            app:layout_constraintBottom_toTopOf="@id/linearLayout"
            android:src="@drawable/tresuareunlock"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            app:layout_constraintBottom_toTopOf="@id/btnGetPoint"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/point_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPoints"
                android:textSize="40dp"
                android:textColor="@color/PURPLE"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnGetPoint"
            app:layout_constraintBottom_toBottomOf="@id/selectResult"
            android:text="@string/GET_POINT"
            android:textColor="@color/WHITE"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_purple_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>